{
    "editor.fontSize": 16,
    "editor.unicodeHighlight.invisibleCharacters": false,

    "editor.mouseWheelZoom": true,

    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.empty.hint": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.editor.showTabs": "single",
    "workbench.editor.showIcons": false,

    "files.autoSave": "afterDelay",
    
    // Terminal:
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash",
            "env": {
                "LANG": "C.UTF-8"
            },
            "args": ["-c","chcp.com 65001;bash"]
        }
    },
    
    // Tools, extensions, and languages:
    "remote.SSH.remotePlatform": {
        "82.146.47.129": "linux"
    },

    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.suggestSmartCommit": false,
    "git.followTagsWhenSync": true,
        "git.branchProtection": [
        "main",
        "master"
    ],

    "python.analysis.typeCheckingMode":"strict",
    "go.toolsManagement.autoUpdate": true,

    "notebook.markup.fontSize": 12,
     "todo-tree.highlights.defaultHighlight": {
        "icon": "alert",
        "type": "text",
        "foreground": "red",
        "background": "white",
        "opacity": 50,
        "iconColour": "blue"
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check",
            "foreground": "black",
            "background": "white",
            "iconColour": "white",
        },
        "NOTE": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray",
        },
        "COMMENT": {
            "icon": "note",
            "foreground": "white",
            "background": "gray",
            "iconColour": "gray",
        },
        "FIXME": {
            "foreground": "black",
            "background": "yellow",
            "iconColour": "yellow",
        },
        "BUG": {
            "foreground": "black",
            "background": "red",
            "iconColour": "red",
        },
        "[ ]": {
            "icon": "check",
            "foreground": "black",
            "background": "white",
            "iconColour": "yellow",
        },
        "[x]": {
            "icon": "check",
            "foreground": "white",
            "background": "green",
            "iconColour": "green",
        }
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "NOTE",
        "COMMENT",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS).*(\\n\\s*//\\s{2,}.*)*",

    "codeWebChat.promptTemplatesForEditContext": [
        {
            "template": "Проведи ревью кода.  Нужен акцент на: читаемости и стиле кода (PEP8), избавлении от дублирования, поиск ошибок, улучшении типизации. Ответ на русском",
            "name": "review"
        },
        {
            "template": "Нужно: 1. Объяснить, что делает каждый класс, метод и функция. 2. Разобрать логику работы пошагово (line-by-line или блоками). 3. Показать, как данные проходят через код (поток данных). 4. Указать зависимости на другие модули, библиотеки или внешние ресурсы. 5. Привести примеры входных и выходных данных для методов и функций, если возможно. 6. Отметить потенциальные подводные камни, баги или неочевидные места. 7. Дать рекомендации по улучшению читаемости и понимания кода, если есть.  Отвечай детально, чтобы я полностью понял логику кода.",
            "name": "learn"
        }
    ],
    
    "chat.agent.enabled": false,
    "chat.commandCenter.enabled": false,
    "chat.disableAIFeatures": true,

    "commitSage.provider.type": "codestral",

}
